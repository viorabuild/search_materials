# Core API keys
OPENAI_API_KEY=your-openai-api-key

# Google Sheets (optional)
GOOGLE_SERVICE_ACCOUNT_FILE=./credentials/service-account.json
# Alternatively, paste the JSON payload into a single line:
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
GOOGLE_SHEET_ID=your-google-sheet-id
GOOGLE_SHEET_WORKSHEET=Sheet1
GOOGLE_SHEET_DEFAULT_ROWS=100
GOOGLE_SHEET_DEFAULT_COLUMNS=20

# Local data and cache tuning
LOCAL_MATERIALS_CSV_PATH=./data/local_materials.csv
CACHE_DB_PATH=./cache/materials.db
CACHE_TTL_SECONDS=86400

# Fetch limits for markdown_ai
ALLOWED_WEB_DOMAINS=example.com,docs.python.org
FETCH_TIMEOUT_SECONDS=10
FETCH_MAX_CONTENT_LENGTH=8000
FETCH_MAX_REQUESTS=3

# Advanced search settings (disabled by default)
ENABLE_WEB_SEARCH=false
USE_BING_SEARCH=false
# BING_API_KEY=your-bing-key
# USE_CHATGPT_SEARCH=false

# Flask web interface
PORT=8501
FLASK_DEBUG=false

# Google Service Account (Domain-Wide Delegation)
# Provide either GOOGLE_SA_FILE (path) or GOOGLE_SA_JSON (inline JSON)
GOOGLE_SA_FILE=
GOOGLE_SA_JSON=
GOOGLE_WORKSPACE_SUBJECT=
GOOGLE_SCOPES=drive.metadata.readonly,spreadsheets.readonly
